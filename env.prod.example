# FitTracker 生产环境配置
# 复制此文件为 .env 并修改相应的值

# 数据库配置
POSTGRES_DB=fittracker
POSTGRES_USER=fittracker
POSTGRES_PASSWORD=your_secure_postgres_password_here
DB_SSL_MODE=require

# Redis 配置
REDIS_PASSWORD=your_secure_redis_password_here

# JWT 配置
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRE_HOURS=24

# AI 服务配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions
TENCENT_HUNYUAN_API_KEY=your_tencent_hunyuan_api_key_here
TENCENT_HUNYUAN_API_URL=https://hunyuan.tencentcloudapi.com

# Docker 镜像配置
REGISTRY=ghcr.io
NAMESPACE=your-github-username
TAG=latest

# Grafana 配置
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# 域名配置（可选）
DOMAIN=your-domain.com
SSL_EMAIL=your-email@example.com

# 备份配置
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# 监控配置
ENABLE_MONITORING=true
ENABLE_LOGGING=true
LOG_LEVEL=info
